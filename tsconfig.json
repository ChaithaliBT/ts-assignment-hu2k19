{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "src/types/*"
            ]
        },
        "sourceRoot": "src",
        "outDir": "dist"
    },
    "typeRoots": [
        "node_module/@types"
    ],
    "include": [
        "src/**/*",
        "spec/**/*"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}